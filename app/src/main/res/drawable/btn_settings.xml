<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#1AFFFFFF">  <!-- лёгкий подсвет при нажатии -->

    <!-- Базовый фон -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <gradient
                android:type="linear"
                android:angle="270"
            android:startColor="#AE0D0D"
            android:endColor="#790000" />
        </shape>
    </item>

    <!-- Маска ripple, чтобы повторять радиус -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <solid android:color="#FFFFFFFF" />
        </shape>
    </item>
</ripple>
