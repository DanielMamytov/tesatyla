<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#8A000000" /> <!-- 53% transparent black background -->
    <corners android:radius="16dp"/> <!-- Rounded corners -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="16dp"
        android:bottom="16dp" /> <!-- Padding around the content -->

    <stroke
        android:color="#F8BB24"
        android:width="2px">
        <gradient
            android:angle="0"
            android:startColor="#F8BB24"
            android:centerColor="#FBF990"
            android:endColor="#F8BB24" /> <!-- Gradient border -->
    </stroke>
</shape>

