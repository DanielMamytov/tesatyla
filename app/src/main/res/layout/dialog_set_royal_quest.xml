<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="16dp">

    <!-- Фон диалога (желательно 9-patch) -->
    <ImageView
        android:id="@+id/bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/dialog_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Контентный контейнер: процентная ширина + maxWidth -->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxWidth="420dp"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@id/bg"
        app:layout_constraintStart_toStartOf="@id/bg"
        app:layout_constraintTop_toTopOf="@id/bg"
        app:layout_constraintWidth_percent="0.82">


        <TextView
            android:id="@+id/tipText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:breakStrategy="balanced"
            android:fontFamily="@font/katibeh_regular"
            android:gravity="center"
            android:hyphenationFrequency="full"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2dp"
            android:text="choose 3 main goals\nfor today and guard\nthem well."
            android:textColor="#511300"
            android:textSize="23sp"
            app:autoSizeMaxTextSize="28sp"
            app:autoSizeMinTextSize="16sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_enter_kingdom"
            android:includeFontPadding="false"
            android:minWidth="120dp"
            android:minHeight="0dp"
            android:paddingHorizontal="28dp"
            android:paddingVertical="10dp"
            android:text="Next tip"
            android:textAllCaps="false"
            android:textColor="#FFE08A"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_enter_kingdom"
            android:includeFontPadding="false"
            android:minWidth="120dp"
            android:minHeight="0dp"
            android:paddingHorizontal="28dp"
            android:paddingVertical="10dp"
            android:text="Got it"
            android:textAllCaps="false"
            android:textColor="#FFE08A"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Ограничиваем высоту фона контентом, чтобы не было фиксированных 550dp -->
    <!-- Ограничиваем высоту фона контентом -->
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/contentBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="content" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centerGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>
