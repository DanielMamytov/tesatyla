<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lesson_fragment_bg"
    tools:context=".presentation.ui.article.ArticleDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btnBack"
                android:drawableStart="@drawable/arrow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/article_back"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageSettings"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end|top"
                android:layout_marginEnd="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/settings_title"
                android:focusable="true"
                android:src="@drawable/settings_bg" />

            <TextView
                android:id="@+id/textArticleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:maxWidth="280dp"
                android:paddingTop="20dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="Learn the 25â€“5 Pomodoro structure" />

        </FrameLayout>

        <View
            android:id="@+id/goldDivider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="@null"
                android:src="@drawable/list_shorter" />

            <ImageView
                android:id="@+id/imageArticleCover"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center|bottom"
                android:layout_marginStart="5dp"
                android:contentDescription="@null"
                tools:src="@drawable/article_im1" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/steps_bg_im"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textArticleContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_18pt_regular"
                android:paddingHorizontal="20dp"
                android:textColor="@color/white"
                android:paddingVertical="20dp"
                android:textSize="14sp"
                tools:text="Theory: The Pomodoro method divides work into cycles..." />
        </LinearLayout>
    </LinearLayout>

</ScrollView>




