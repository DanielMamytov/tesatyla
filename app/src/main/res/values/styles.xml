<resources>
    <!-- Shared shape appearance for rounded 12dp corners -->
    <style name="Shape.Round12" parent="@style/ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Alias to satisfy views referencing @style/shape -->
    <style name="shape" parent="@style/Shape.Round12" />

    <style name="TextAppearance.NavLabel" parent="@style/TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/katibeh_regular</item>
    </style>

    <style name="Shape.Pill">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="NavBar.ActiveIndicator" parent="@style/Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:height">28dp</item>
        <item name="android:insetLeft">8dp</item>
        <item name="android:insetRight">8dp</item>
        <item name="android:insetTop">36dp</item>
        <item name="android:insetBottom">6dp</item>
        <item name="shapeAppearance">@style/Shape.Pill</item>
        <item name="android:background">@drawable/active_text_pill</item>
    </style>

    <!-- Legacy alias used by menu previews -->
    <style name="BottomNavTextAppearance" parent="@style/TextAppearance.NavLabel" />
</resources>
